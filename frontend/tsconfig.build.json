{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Build-specific overrides */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist/types",
    "sourceMap": true,
    "inlineSources": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importsNotUsedAsValues": "remove"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/*",
    "**/__mocks__/*",
    "**/test-utils/*",
    "**/*.stories.*",
    "**/*.spec.*",
    "**/*.test.*"
  ]
}
